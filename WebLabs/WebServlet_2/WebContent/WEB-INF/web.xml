<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>WebServlet_2</display-name>
  <welcome-file-list>

    <welcome-file>index.jsp</welcome-file>

  </welcome-file-list>
  
  <servlet>
  	<servlet-name>path</servlet-name>
  	<servlet-class>com.PathServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>path</servlet-name>
  	<url-pattern>/java/study/*</url-pattern> 
  </servlet-mapping>
  <!--
  경로 매핑 가능
  	 192.168 ..... /WebServlet_2/java/study/board.jsp >> 경로를 가지고도 맵핑 가능
  	 >> com.PathServlet 실행
   -->
</web-app>